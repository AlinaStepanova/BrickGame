<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/llBase"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.example.alina.tetris.PlayingArea
        android:id="@+id/pole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1">
    </com.example.alina.tetris.PlayingArea>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llControl"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:gravity="bottom"
                android:textSize="@dimen/midTextSize"
                android:layout_weight="0.1"
                android:text="@string/scoreText"
                style="@style/simpleStyle"/>

            <com.example.alina.tetris.ScoreArea
                android:id="@+id/tvScore"
                android:layout_weight="0.2"
                android:text="@string/startScore"
                android:textStyle="bold"
                style="@style/simpleStyle">
            </com.example.alina.tetris.ScoreArea>

            <com.example.alina.tetris.Controller
                android:id="@+id/controller"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="0dp">
            </com.example.alina.tetris.Controller>

            <Button
                android:id="@+id/bMenu"
                android:layout_weight="0.1"
                android:text="@string/menu"
                android:elevation="@dimen/elevation"
                android:background="@color/mainColor"
                android:textColor="@color/white"
                style="@style/simpleStyle"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>